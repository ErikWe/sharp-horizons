<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<RootNamespace>SharpHorizons</RootNamespace>
	</PropertyGroup>

	<PropertyGroup>
		<Title>SharpHorizons</Title>
		<Description>
			Provides an API for JPL Horizons.
		</Description>
	</PropertyGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<IsPackable>true</IsPackable>
		<IsPublishable>true</IsPublishable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SharpMeasures" />
		<PackageReference Include="SharpMeasures.Astronomy" />
		<PackageReference Include="SharpMeasures.Base" />
		<PackageReference Include="SharpMeasures.Generators" PrivateAssets="all" />
	</ItemGroup>

</Project>
